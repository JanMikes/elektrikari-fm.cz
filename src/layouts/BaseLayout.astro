---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  keywords?: string;
}

const {
  title = "Elektroinstalace, Hromosvody, Revize - Elektrikáři z Frýdku-Místku",
  description = "Profesionální elektrikáři z Frýdku-Místku. Nabízíme elektroinstalace, montáž hromosvodů a revize. Působíme v okolí Ostravy, Karviné a Opavy. Kvalita a spokojenost zákazníků jsou naší prioritou.",
  keywords = "elektrikář, elektroinstalace, revize, elektro, hromosvody, Frýdek-Místek, Ostrava, Karviná"
} = Astro.props;
---

<!DOCTYPE html>
<html lang="cs">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="keywords" content={keywords}>
  <meta name="description" content={description}>
  <meta name="author" content="Jan Mikeš - j.mikes@me.com">
  <meta name="robots" content="index, follow">

  <title>{title}</title>

  <!-- Favicons -->
  <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <link rel="shortcut icon" href="/favicon.ico" />
  <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
  <link rel="manifest" href="/site.webmanifest" />
  <meta name="apple-mobile-web-app-title" content="Elektrikáři" />

  <link rel="sitemap" type="application/xml" title="Sitemap" href="/sitemap.xml">

  <!-- Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=G-4V7PF8X53R"></script>
  <script is:inline>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', 'G-4V7PF8X53R');
  </script>
</head>
<body class="min-h-screen flex flex-col">
  <Header />

  <main class="flex-grow">
    <slot />
  </main>

  <Footer />
</body>
</html>
