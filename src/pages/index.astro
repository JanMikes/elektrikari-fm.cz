---
import BaseLayout from '../layouts/BaseLayout.astro';
import ServiceCard from '../components/ServiceCard.astro';
import CallToAction from '../components/CallToAction.astro';
import { Zap, Shield, CheckCircle } from 'lucide-astro';
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="relative overflow-hidden bg-gradient-to-br from-primary-800 via-primary-600 to-blue-500 py-20 md:py-32">
    <!-- Animated gradient overlay -->
    <div class="absolute inset-0 bg-gradient-to-tr from-blue-400/20 via-transparent to-primary-500/20 animate-gradient"></div>

    <!-- Decorative elements -->
    <div class="absolute top-10 left-10 w-72 h-72 bg-blue-400/10 rounded-full blur-3xl animate-gradient"></div>
    <div class="absolute bottom-10 right-10 w-96 h-96 bg-primary-400/10 rounded-full blur-3xl animate-gradient" style="animation-delay: 2s;"></div>

    <div class="container-custom text-center relative z-10">
      <h1 class="text-5xl md:text-7xl font-bold mb-6 text-white drop-shadow-lg">
        Jsme <span class="text-blue-200">elektrikáři</span><br />
        z <span class="text-blue-300">Frýdku-Místku</span>
      </h1>

      <p class="text-xl md:text-2xl text-blue-50 max-w-3xl mx-auto mb-12 drop-shadow">
        Profesionální elektroinstalace, revize a montáž hromosvodů
      </p>

      <!-- Service Cards Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mt-16">
        <ServiceCard
          title="Elektroinstalace"
          description="Profesionální služby pro váš domov i podnikání"
          href="/elektroinstalace/"
          icon={`<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-600"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>`}
        />

        <ServiceCard
          title="Revize"
          description="Bezpečí a spolehlivost na prvním místě"
          href="/revize/"
          icon={`<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-600"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path></svg>`}
        />

        <ServiceCard
          title="Hromosvody"
          description="Ochrana, na kterou se můžete spolehnout"
          href="/hromosvody/"
          icon={`<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary-600"><path d="M20 16.2A4.5 4.5 0 0 0 17.5 8h-1.8A7 7 0 1 0 4 14.9"></path><path d="m7 21-3-3h9l-3 3Z"></path></svg>`}
        />
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="py-20 bg-white">
    <div class="container-custom">
      <div class="max-w-4xl mx-auto text-center">
        <p class="text-2xl md:text-3xl font-semibold text-gray-800 leading-relaxed mb-8">
          Děláme naše řemeslo s láskou a maximální péčí.
        </p>
        <p class="text-xl text-gray-600">
          100% kvalita a spokojenost zákazníka jsou pro nás prioritou a naší vizitkou!
        </p>

        <CallToAction />
      </div>
    </div>
  </section>

  <!-- Why Choose Us Section -->
  <section class="py-20 bg-gray-50">
    <div class="container-custom">
      <h2 class="text-center mb-16">Proč si vybrat nás?</h2>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <div class="text-center space-y-4">
          <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <CheckCircle class="h-10 w-10 text-primary-600" />
          </div>
          <h3 class="text-xl font-bold">Odbornost a kvalita</h3>
          <p class="text-gray-600">
            Každou zakázku provádíme s maximální precizností a důrazem na detail
          </p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-20 h-20 bg-accent-100 rounded-full flex items-center justify-center mx-auto">
            <Shield class="h-10 w-10 text-accent-600" />
          </div>
          <h3 class="text-xl font-bold">Bezpečnost na prvním místě</h3>
          <p class="text-gray-600">
            Naše elektroinstalace odpovídají platným normám a zajišťují bezpečný provoz
          </p>
        </div>

        <div class="text-center space-y-4">
          <div class="w-20 h-20 bg-primary-100 rounded-full flex items-center justify-center mx-auto">
            <Zap class="h-10 w-10 text-primary-600" />
          </div>
          <h3 class="text-xl font-bold">Kompletní služby</h3>
          <p class="text-gray-600">
            Od návrhu po realizaci – u nás najdete vše pod jednou střechou
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
