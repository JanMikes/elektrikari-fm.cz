---
interface Props {
  title: string;
  subtitle?: string;
  centered?: boolean;
}

const { title, subtitle, centered = false } = Astro.props;
---

<div class:list={["mb-8", { "text-center": centered }]}>
  <h1 class="mb-2">{title}</h1>
  {subtitle && (
    <h2 class="text-xl md:text-2xl text-gray-600 font-normal">{subtitle}</h2>
  )}
</div>
