---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  images: string[];
}

const { title, images } = Astro.props;

// Import all reference images dynamically
const imageModules = import.meta.glob<{ default: ImageMetadata }>('../images/*.jpg');

// Helper to get image for a filename
async function getImage(filename: string) {
  const path = `../images/${filename}`;
  const imageModule = imageModules[path];
  if (!imageModule) {
    console.warn(`Image not found: ${path}`);
    return null;
  }
  return (await imageModule()).default;
}

// Preload all images
const imageAssets = await Promise.all(
  images.map(async (img) => await getImage(img))
);
---

<div class="card">
  <h3 class="text-xl font-bold text-primary-800 mb-6 text-center">{title}</h3>

  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
    {imageAssets.map((imageAsset, index) => (
      imageAsset && (
        <button
          type="button"
          class="gallery-image-btn group relative overflow-hidden rounded-lg shadow-md hover:shadow-xl transition-all duration-300 aspect-square"
          data-title={title}
          data-image={images[index]}
          data-index={index}
          data-total={images.length}
        >
          <Image
            src={imageAsset}
            alt={`${title} - ${index + 1}`}
            width={300}
            height={300}
            format="webp"
            quality={85}
            class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
            loading="lazy"
          />
          <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-20 transition-all duration-300 flex items-center justify-center">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-white opacity-0 group-hover:opacity-100 transition-opacity duration-300"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v6m3-3H7" />
            </svg>
          </div>
        </button>
      )
    ))}
  </div>
</div>

<style>
  .gallery-image-btn {
    cursor: pointer;
  }
</style>
