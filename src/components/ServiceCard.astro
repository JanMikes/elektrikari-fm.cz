---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: any;
}

const { title, description, href, icon } = Astro.props;
---

<a
  href={href}
  class="group block card hover:scale-105 transform transition-all duration-300 border-2 border-transparent hover:border-accent-400 hover:shadow-2xl backdrop-blur-sm bg-white/95"
>
  <div class="flex flex-col items-center text-center space-y-4">
    {icon && (
      <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center group-hover:bg-primary-200 transition-colors duration-300">
        <Fragment set:html={icon} />
      </div>
    )}

    <h2 class="text-2xl font-bold text-primary-700 group-hover:text-primary-800 transition-colors">
      {title}
    </h2>

    <p class="text-gray-600 group-hover:text-gray-800 transition-colors">
      {description}
    </p>
  </div>
</a>
