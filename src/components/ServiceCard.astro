---
interface Props {
  title: string;
  description: string;
  href: string;
  icon?: any;
}

const { title, description, href, icon } = Astro.props;
---

<a
  href={href}
  class="group block card hover:scale-[1.02] transform transition-all duration-300 hover:shadow-2xl backdrop-blur-sm !bg-gradient-to-br !from-blue-50/30 !via-blue-100/70 !to-blue-200/90 hover:!from-blue-50/40 hover:!via-blue-100/80 hover:!to-blue-300/95 !p-4 md:!p-6 origin-center"
>
  <div class="flex flex-col items-center text-center space-y-2 md:space-y-4">
    {icon && (
      <div class="w-12 h-12 md:w-16 md:h-16 bg-primary-100 rounded-full flex items-center justify-center group-hover:bg-primary-200 transition-colors duration-300">
        <Fragment set:html={icon} />
      </div>
    )}

    <h2 class="text-xl md:text-2xl font-bold text-primary-700 group-hover:text-primary-800 transition-colors">
      {title}
    </h2>

    <p class="text-gray-600 group-hover:text-gray-800 transition-colors">
      {description}
    </p>
  </div>
</a>
